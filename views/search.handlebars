<div class="container m-4 w-25 border border-dark">
  <form class="border border-primary">
    <div>
      <label for="breed">Dog breed</label>
      <input class="form-input" type="text" placeholder="Ex. Shephard" name="breed" id="breed">
    </div>
    <div>
      <label class="w-100" for="temperment">Temperment:</label>
      <select name="temperment" id="tempermentDropDown" class="w-50 m-2">
        <option value="Alert">Alert</option>
      </select>
    </div>
    <div>
      <label class="w-100" for="grooming">Grooming:</label>
      <select name="grooming" id="groomingDropdown" class="w-50 m-2">
        <option value="weekly">Weekly</option>
      </select>
    </div>
    <div>
      <label class="w-100" for="energy">Energy:</label>
